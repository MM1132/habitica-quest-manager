{
    "ignorePatterns": [
        "!.*"
    ],
    "plugins": [
        "prettier",
        "googleappsscript",
        "json"
      ],
    "env": {
        "browser": true,
        "es2021": true,
        "googleappsscript/googleappsscript": true
    },
    "extends": [
        "eslint:recommended",
        "airbnb-base",
        "plugin:prettier/recommended",
        "google",
        "plugin:json/recommended", 
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "json/*": ["error", "allowComments"],
        "prettier/prettier": "error",
        "no-var": "off",
        "valid-jsdoc": "off",
        "require-jsdoc": "off",
        "no-unused-vars": "off",
        "no-undef": "off"
    }
}
