{
  "compilerOptions": {
    "target": "ES5",
    "lib": [
      "ESNext"
    ],
    "module": "ES6",
    "strict": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "outDir": "build",
    "types": [
      "google-apps-script"
    ]
  },
  "include": [
    "src/ts/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
  ]
}
